<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ZadanieDomoweLukaszPluta.Content.Style">
    
    <Style x:Key="MenuStandardowe" TargetType="Menu">
        <Setter Property="Grid.ColumnSpan" Value="2"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="Height" Value="28"/>
    </Style>


    <Style x:Key="ToggleButtonStandardowe" TargetType="ToggleButton">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Width" Value="36"/>
    </Style>
    <Style x:Key="ToggleButtonTloLight" TargetType="ToggleButton" BasedOn="{StaticResource ToggleButtonStandardowe}">
        <Setter Property="Background" Value="LightBlue"/>
    </Style>
    <Style x:Key="StatusBarItemStandard" TargetType="StatusBarItem">
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>
    <Style x:Key="StatusBarItemPrawy" TargetType="StatusBarItem">
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>
    
</ResourceDictionary>